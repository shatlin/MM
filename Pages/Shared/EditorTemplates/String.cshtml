@model System.String
<div class="form-group mb-4">
    <label asp-for=@Model class="control-label"></label>
    <input asp-for=@Model type="text" class="form-control form-input" placeholder=@ViewData["placeholder"] id=@ViewData["id"]>
    <span asp-validation-for=@Model class="text-danger"></span>
</div>

