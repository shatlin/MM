@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}




<!--  Login Content  -->

<div class="login-container  animate__animated animate__fadeIn animate__delay-1s">
    <div class="card login-card shadow-sm">

        <div class="card-header">
            <span>
                SIGN IN
            </span>

        </div>

        <div class="card-body">
            <form method="post" class="pt-4">
                <div asp-validation-summary="All"></div>

                <div class="form-group  mb-4">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control form-input" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group  mb-4">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control  form-input" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />  @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>



                <div class="text-center pt-5 mb-5">
                    <button type="submit" class="form-btn">Log in</button>
                </div>

                <div class="form-group  mb-4">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>

            </form>
        </div>
       

        <div class="card-footer">
            <span>New Here?</span>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="color: white;"> Sign up now</a>
        </div>


    </div>
</div>
