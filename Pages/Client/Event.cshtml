@using MM.Helper;
@{ Layout = "_LayoutClient";}
@{
ViewData["Title"] = "Register";
}

<partial name="_CRUDHeader" ,
    model='new Header{name="Register", description="Register by adding your organization details and your user details"}' />

<div class="container">

    <div class="reg-container row">
        <!--  Personal -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card shadow-sm" style="min-height:550px;margin-top:10px;margin-bottom:10px">
                <div class="card-header">
                    <span>
                        Organization Details
                    </span>

                </div>
                <div class="card-body reg-card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
                    <form method="post">
                        <input type="hidden" asp-for=ClientOrganization.Id value="0" />
                    
                        <div class="form-group">
                            <label asp-for=ClientOrganization.Name class="control-label"></label>
                            <input asp-for=ClientOrganization.Name type="text" class="form-control form-input">
                            <span asp-validation-for=ClientOrganization.Name class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for=ClientOrganization.Description    class="control-label"></label>
                            <input asp-for=ClientOrganization.Description type="text" class="form-control form-input">
                            <span asp-validation-for=ClientOrganization.Description class="text-danger"></span>
                        </div>

                        <div class="form-group">

                            <label asp-for=ClientOrganization.DateSettingId class="control-label"></label>
                            <select class="form-control form-input" asp-for=ClientOrganization.DateSettingId
                                    asp-items=Model.OrgDateSettings>
                                <option disabled selected>--- Please select a value ---</option>
                            </select>
                            <span asp-validation-for=ClientOrganization.DateSettingId class="text-danger"></span>
                        </div>

                         <div class="form-group">
                            <label asp-for=ClientOrganization.TimeFormatId class="control-label"></label>
                            <select class="form-control form-input" asp-for=ClientOrganization.TimeFormatId
                                    asp-items=Model.OrgTimeFormat>
                                <option disabled selected>--- Please select a value ---</option>
                            </select>
                            <span asp-validation-for=ClientOrganization.TimeFormatId class="text-danger"></span>
                        </div>

                       <div class="form-group">
                            <label asp-for=ClientOrganization.ClientTimeZoneId class="control-label"></label>
                            <select class="form-control form-input" asp-for=ClientOrganization.ClientTimeZoneId
                                    asp-items=Model.OrgTimeZone>
                                <option disabled selected>--- Please select a value ---</option>
                            </select>
                            <span asp-validation-for=ClientOrganization.ClientTimeZoneId class="text-danger"></span>
                        </div>

                            <div class="form-group">
                            <label asp-for=ClientOrganization.CurrencyId class="control-label"></label>
                            <select class="form-control form-input" asp-for=ClientOrganization.CurrencyId
                                    asp-items=Model.OrgCurrency>
                                <option disabled selected>--- Please select a value ---</option>
                            </select>
                            <span asp-validation-for=ClientOrganization.CurrencyId class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for=ClientOrganization.AgreedToTerms type="checkbox">
                            <a href="" class="ml-2 mr-4">I agree to the terms and conditions</a>
                            <span asp-validation-for=ClientOrganization.AgreedToTerms class="text-danger"></span>
                            <button type="submit" class="form-btn" style="width: 10%;">Submit</button>
                        </div>
                    </form>
</div>
            </div>
        </div>
    </div>
