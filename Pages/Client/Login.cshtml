@page
@model MM.Pages.Client.LoginModel

@{
    ViewData["Title"] = "Sign In";
}

   <!--  Login Content  -->

<div class="login-container">
    <div class="card login-card shadow-sm">

        <div class="card-header">
            <span>
                SIGN IN
            </span>

        </div>

        <div class="card-body">
            <form action="/Client/Index" class="pt-4">
                <div class="form-group mb-4">
                    <input type="text" class="form-control form-input" placeholder="User Name">
                </div>

                <div class="form-group">
                    <input type="password" class="form-control form-input" placeholder="Password">
                </div>

                <div class="text-center pt-5">
                    <button type="submit" class="form-btn">Submit</button>
                </div>

                <div class="text-center pt-3 pb-3">
                    <span style="color: black;">
                        Forgot
                    </span>

                    <a href="#">
                        Username / Password?
                    </a>
                </div>

            </form>
        </div>

        <div class="card-footer">
            <span>Don’t have an account?</span>

            <a href="Register" style="color: #00131a;">
                Sign up now
            </a>
        </div>
    </div>
</div>
<!-- / Login Content  -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
